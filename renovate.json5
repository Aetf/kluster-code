{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:pulumi",
  ],
  "major": {
    "dependencyDashboardApproval": true,
  },
  "patch": {
    "enabled": false,
  },
  "automergeStrategy": "squash",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "ignorePaths": [
    "src/crds/**",
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "groupName": "Non major dep updates",
      "groupSlug": "non-major-deps",
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepTypes": ["helm", "container"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "apps",
    },
    {
      "matchDepTypes": ["helm", "container"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "Non major app updates",
      "groupSlug": "non-major-apps",
    },
  ],
  "customManagers": [
    // Match helm charts in pulumi config.
    {
      "customType": "regex",
      "fileMatch": ["^Pulumi\\..+\\.ya?ml$"],
      "matchStrings": [
        "chart:(?<depName>[\\w.-]+):\\s*(?<registryUrl>[\\w.:/-]+):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "helm",
      "versioningTemplate": "helm",
      "depTypeTemplate": "helm",
    },
    // Match docker images in pulumi config.
    {
      "customType": "regex",
      "fileMatch": ["^Pulumi\\..+\\.ya?ml$"],
      "matchStrings": [
        "image:(?<depName>[\\w.-]+):\\s*(?<packageName>[\\w./-]+):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "depTypeTemplate": "helm",
    }
  ]
}
